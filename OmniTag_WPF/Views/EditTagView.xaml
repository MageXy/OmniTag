            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MaxHeight="35" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" MaxHeight="35" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            --><!--<TextBox Grid.Column="0" Grid.Row="0"
                     Margin="0,0,5,2"
                     Text="{Binding FullSearchText}"
