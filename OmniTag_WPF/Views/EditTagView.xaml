                     bhvr:AutoCompleteBehavior.AutoCompleteItemsSource="{Binding SearchedFilteredTags, Converter={StaticResource TagConverter}}"
                     bhvr:AutoCompleteBehavior.AutoCompleteStringComparison="CurrentCultureIgnoreCase" />--><!--
